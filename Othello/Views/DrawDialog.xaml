<Window x:Class="Othello.Views.DrawDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Othello.Views"
        mc:Ignorable="d"
        Title="Draw" Height="200" Width="300">
    <Grid>
        <TextBlock Name="DrawText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" />
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Width="75" Click="OkButton_Click"/>
    </Grid>
</Window>
